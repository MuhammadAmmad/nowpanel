<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="#50000000">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:id="@+id/laymain">

        <DigitalClock
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sagat"
            android:textSize="60sp"
            android:textAlignment="center"
            android:textColor="#4a97f8"
            android:singleLine="true"
            android:phoneNumber="false"
            android:layout_gravity="center_horizontal|bottom"
            android:gravity="bottom"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingBottom="30dp"
        android:id="@+id/laymains">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13"
            android:id="@+id/gun"
            android:textSize="25dp"
            android:textColor="#ffefefef"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:background="#d2f0f0f0">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="14dp"
            android:id="@+id/down"
            android:layout_gravity="center"
            android:src="@drawable/exit_bg"
            android:layout_margin="6dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/o"
                android:textSize="16sp"
                android:id="@+id/textView"
                android:textColor="#000E1B"
                android:textStyle="bold"
                android:layout_gravity="center_vertical" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:id="@+id/about"
                android:src="@drawable/i"
                android:layout_marginRight="25dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                />
        </LinearLayout>



        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:weightSum="1"
            android:background="#14000000"
            android:layout_marginTop="10dp"
			android:layout_marginBottom="10dp">

			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/bright_0"
				android:layout_weight="0.1"
				android:layout_marginLeft="15dp" 
				android:layout_gravity="center_vertical"/>
			
            <SeekBar
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar"
                android:layout_marginLeft="5dp"
                android:progressDrawable="@drawable/seekbar_s"
                android:thumb="@drawable/seek_thumb"
                android:thumbOffset="5dp"
                android:max="255"
                android:paddingLeft="20dp"
                android:layout_weight="0.7"
                android:paddingRight="5dp"
                android:layout_gravity="center"
                android:layout_marginRight="15dp" />
				
			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/bright_1"
				android:layout_weight="0.1"
				android:layout_marginRight="5dp"
				android:layout_gravity="center"/>

            <ImageView
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:src="@drawable/s_b"
                android:id="@+id/aswitch"
                android:layout_weight="0.1"
                android:paddingRight="15dp"
                android:layout_gravity="center_vertical" />

        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/m_prev_x"
                    android:id="@+id/mprev"
                    android:layout_weight="0.3"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/m_play_x"
                    android:id="@+id/mplay"
                    android:layout_weight="0.3"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/m_next_x"
                    android:id="@+id/mnext"
                    android:layout_weight="0.3"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_margin="15dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView"
                    android:src="@drawable/s_down"
                    android:layout_weight="0.1"
                    android:layout_margin="3dp" />

                <SeekBar
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/s_sound"
                    android:layout_marginLeft="6dp"
                    android:progressDrawable="@drawable/seekbar_s"
                    android:thumb="@drawable/seek_thumb"
                    android:thumbOffset="5dp"
                    android:max="12"
                    android:paddingLeft="15dp"
                    android:layout_weight="0.8"
                    android:paddingRight="5dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="6dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView2"
                    android:src="@drawable/s_up"
                    android:layout_margin="3dp"
                    android:layout_weight="0.1" />
            </LinearLayout>

        </LinearLayout>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp">

            <ImageView
                android:layout_width="38dp"
                android:layout_height="48dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="0.2"
                android:src="@drawable/clock_bg"
                android:id="@+id/b_clock"/>

            <ImageView
                android:layout_width="38dp"
                android:layout_height="48dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="0.2"
                android:src="@drawable/calc_bg"
                android:id="@+id/b_calc"/>

            <ImageView
                android:layout_width="38dp"
                android:layout_height="48dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="0.2"
                android:src="@drawable/flash_bg"
                android:id="@+id/b_fonar"/>

            <ImageView
                android:layout_width="38dp"
                android:layout_height="48dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="0.2"
                android:src="@drawable/camera_bg"
                android:id="@+id/b_camera"/>

            <ImageView
                android:layout_width="38dp"
                android:layout_height="48dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="0.2"
                android:id="@+id/b_settings"
                android:src="@drawable/settings_bg"/>

        </TableRow>

    </LinearLayout>

</LinearLayout>

